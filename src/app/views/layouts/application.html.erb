<!DOCTYPE html>
<html>
<head>
  <title>BlindNite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
      <link href="app/assets/stylesheets/bootstrap.css" rel="stylesheet">
      <link href="app/assets/stylesheets/custom-animations.css" rel="stylesheet">
      <link href="app/assets/stylesheets/style.css" rel="stylesheet">

</head>
<body>
  <div id="container">
    <div id="user_nav">
      <% if current_user %>

      <% end %>

    </div>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
    <%= yield %>
  </div>
 
    
</body>
</html>